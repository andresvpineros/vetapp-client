{
    "compilerOptions": {
      "baseUrl": "./",
      "module": "ESNext",
      "moduleResolution": "Node",
      "target": "ES2020",
      "jsx": "react",
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "paths": {
        "@components/*": ["src/app/ui/components/*"],
        "src/*": ["src/*"]
      }
    },
    "exclude": ["node_modules", "**/node_modules/*", "dist", "coverage"]
}
  